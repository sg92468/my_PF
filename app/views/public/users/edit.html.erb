<div class="container">
  <div class="row">
    <div class="col-sm-10 d-block justify-content-center mx-auto mb-5">
      <h2>マイページ編集画面</h2>
      <div class="col-12 d-flex justify-content-center mt-3">
        <%= form_with model:@user, local:true do |f| %>
        <table class="table">
          <tr>
            <th class="table-active">プロフィール画像</th>
            <td class="align-middle"><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th class="table-active">名前</th>
            <td class="align-middle"><%= f.text_field :name, placeholder: "名前", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <td class="align-middle"><%= f.text_field :postal_code, placeholder: "0000000", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <td class="align-middle"><%= f.text_field :address, placeholder: "◯◯県◯◯市○○区◯◯ ◯丁目◯◯番地", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <td class="align-middle"><%= f.text_field :phone_number, placeholder: "1234567890", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">習得言語</th>
            <td class="align-middle"><%= f.text_field :available_language, placeholder: "HTML,css,Ruby..etc.", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">自己紹介</th>
            <td class="align-middle"><%= f.text_area :information, placeholder: "ここに自己紹介を記載してください", size: "30x5", class: "form-control" %></td>
          </tr>
        </table>
        <div class="actions text-center">
            <%= f.submit "保存", class: "btn btn-success col-4 mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>