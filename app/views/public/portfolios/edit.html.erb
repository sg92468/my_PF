<div class="container">
  <div class="row">
    <div class="col-sm-10 d-block justify-content-center mx-auto mb-5">
      <h2>ポートフォリオ編集</h2>
      <div class="col-12 d-flex justify-content-center mt-3">
        <%= form_with model:@portfolio, local:true do |f| %>
        <table class="table">
          <tr>
            <th class="table-active">トップ画像</th>
            <td class="align-middle"><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <th class="table-active">ポートフォリオ名</th>
            <td class="align-middle"><%= f.text_field :name, placeholder: "ポートフォリオ名", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">サイトURL</th>
            <td class="align-middle"><%= f.text_field :site_url, placeholder: "https://...", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">githubURL</th>
            <td class="align-middle"><%= f.text_field :github_url, placeholder: "https://github.com/...", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">使用言語</th>
            <td class="align-middle"><%= f.text_field :use_language, placeholder: "HTML,css,Ruby..etc.", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">ジャンル</th>
            <td class="align-middle"><%= f.select :genre, Portfolio.genres_i18n.invert, prompt: "--選択してください--", size: "30", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="table-active">説明</th>
            <td class="align-middle"><%= f.text_area :information, placeholder: "ここに説明を記載してください", size: "30x5", class: "form-control" %></td>
          </tr>
        </table>
        <div class="actions text-center">
          <%= f.submit "編集", class: "btn btn-success col-4 mt-2" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>